{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES5",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "@/*": [
        "./*"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": [
    "**/*.d.ts",
    "./src/**/*",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
